@model IEnumerable<Department>

@{
    ViewData["Title"] = "Departments";
}

<h2>Departments</h2>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Code</th>
            <th scope="col">Location</th>
            <th scope="col">Employee Count</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var dept in Model)
        {
            <tr>
                <td>@dept.Id</td>
                <td>@dept.Name</td>
                <td>@dept.Code</td>
                <td>@dept.Location</td>
                <td>@dept.Employees.Count</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@dept.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@dept.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
        <a class="btn btn-primary mb-3" asp-action="Create">Create New Department</a>
    </tbody>
</table>