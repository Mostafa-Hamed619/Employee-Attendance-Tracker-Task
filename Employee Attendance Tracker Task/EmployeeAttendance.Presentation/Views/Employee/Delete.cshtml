@model EmployeeAttendance.Data.Entities.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<h2 class="text-danger">Delete Employee</h2>
<hr />

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="alert alert-warning">
    <h4>Are you sure you want to delete this employee?</h4>
    <p>This action cannot be undone.</p>
</div>

<div class="card p-3 shadow-sm">
    <dl class="row">
        <dt class="col-sm-3">Employee Code</dt>
        <dd class="col-sm-9">@Model.Code</dd>

        <dt class="col-sm-3">Full Name</dt>
        <dd class="col-sm-9">@Model.FullName</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Department</dt>
        <dd class="col-sm-9">@Model.Department?.Name</dd>
    </dl>
</div>

<form asp-action="Delete" method="post" class="mt-4">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
